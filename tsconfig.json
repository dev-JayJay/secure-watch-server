{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true
  },
  "include": ["./src/*"]
}
